<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1E7DF"
    tools:context=".Splash_Screen">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ox_icon"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/textView_11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tic Tac Toe"
        android:layout_below="@id/imageView"
        android:layout_marginTop="120dp"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/raleway_font"/>

    <TextView
        android:id="@+id/textView_22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "play with Fun"
        android:layout_below="@id/textView_11"
        android:layout_marginTop="25dp"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/playlist"/>
</RelativeLayout>